<h4>Add a comment:</h4>

<%= form_for([@product, @product.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<% unless current_user == nil %>
    <% if current_user.id == @product.user_id %>
        <%= link_to 'Edit', edit_product_path(@product) %> |
    <% end %>
<% end %>
<%= link_to 'Back', products_path %>