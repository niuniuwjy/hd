<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="container">
  <div class="row-fluid">
    <div class="span12">
      <div class="span6">
        <div class="area">
          <form class="form-horizontal">
            <div class="heading">
              <h4 class="form-heading">登录</h4>
            </div>

            <div class="control-group">
              <label class="control-label" for="inputUsername">用户名或邮箱</label>
                  <%= f.text_field :login %></p>
            </div>

            <div class="control-group">
              <label class="control-label" for="inputPassword">输入密码</label>
                  <%= f.password_field :password %>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="control-group">
              <div class="controls">
                <label class="checkbox">
                  <input type="checkbox"> 保持登录</label>
              </div>
             </div>
            <% end %>
            <button type="submit" class="btn btn-success">登录</button>
            <button type="button" class="btn">帮助</button>
        </form>

      </div>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>


<% end%>
