<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
   <%= devise_error_messages! %>
    <div class="container">
      <div class="row-fluid">
        <div class="span12">
          <div class="span6">
            <div class="area">
              <form class="form-horizontal">
                <div class="heading">
                  <h4 class="form-heading">注册</h4>
                </div>

                <div class="control-group">
                  <label class="control-label" for="inputUsername">用户名</label>
                  <%= f.text_field :username %>
                </div>

                <div class="control-group">
                  <label class="control-label" for="inputUseremail">邮箱</label>
                  <%= f.email_field :email, :autofocus => true %>
                </div>

                <div class="control-group">
                  <label class="control-label" for="inputPassword">输入密码</label>
                  <%= f.password_field :password %>
                </div>

                <div class="control-group">
                  <label class="control-label" for="inputPasswordConfirmation">确认密码</label>
                  <%= f.password_field :password_confirmation %>
                </div>


                <button type="submit" class="btn btn-success">注册</button>
                <button type="button" class="btn">帮助</button>
              </form>

            </div>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>


<% end%>


